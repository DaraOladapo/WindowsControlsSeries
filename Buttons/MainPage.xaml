<Page
    x:Class="Buttons.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Buttons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="4">
            <!--Basic Button-->
            <Button Content="Button"/>
            <!--Normal also-->
            <Button>
                    Button
            </Button>
            <!--Making the button richer-->
            <Button>
                <Button.Content>
                    <StackPanel>
                        <Image Source="Assets/CompAdd.png" Height="64"/>
                        <TextBlock Text="Click Me"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <ToggleButton Content="Change Value" Click="ToggleButton_Click" Name="StateToggle"/>
            <TextBlock Name="ButtonState"/>
        </StackPanel>
    </Grid>
</Page>
